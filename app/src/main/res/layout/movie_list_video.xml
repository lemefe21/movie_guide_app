<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_review_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margim_8dp"
        android:layout_marginLeft="@dimen/default_margim_16dp"
        android:layout_marginRight="@dimen/default_margim_8dp"
        android:layout_marginBottom="@dimen/default_margim_8dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="@dimen/item_card_corner_radius">

        <ImageView
            android:id="@+id/im_thumbnail_video"
            android:layout_width="@dimen/image_thumbnail_width"
            android:layout_height="@dimen/image_thumbnail_height"
            app:srcCompat="@color/background" />

        <ImageView
            android:id="@+id/im_play_video"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_video" />

    </android.support.v7.widget.CardView>

</LinearLayout>